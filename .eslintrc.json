{
  "parser": "@typescript-eslint/parser",
  "extends": "react-app",
  "rules": {
    "indent": ["warn", 2],
    "react/jsx-indent": ["warn", 2],
    "import/extensions":[
       ".js",
       ".jsx",
       ".json",
       ".ts",
       ".tsx"
    ],
  },
  "settings": {
     "import/resolver": {
        "node": {
           "paths": [
              "src"
           ],
           "extensions": [
              ".js",
              ".jsx",
              ".json",
              ".ts",
              ".tsx"
           ]
        }
     }
  }
}
